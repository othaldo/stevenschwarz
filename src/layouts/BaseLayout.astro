---
import "../styles/base.css";
const { title = "stevenschwarz.de" } = Astro.props;
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <div class="bg-glow one"></div>
    <div class="bg-glow two"></div>
    <div class="bg-glow three"></div>

    <div class="app-shell">
      <header class="site-header">
        <div class="navbar">
          <a class="brand" href="/">
            <span class="brand-dot"></span>
            <span>stevenschwarz.de</span>
          </a>
          <nav>
            <a href="/">Home</a>
            <a href="/projects">Projekte</a>
            <a href="/about">Über mich</a>
          </nav>
        </div>
      </header>

      <main class="content">
        <slot />
      </main>

      <footer class="site-footer">
        <p>© {new Date().getFullYear()} Steven Schwarz – Bauen, Lernen, Ausprobieren.</p>
      </footer>
    </div>
  </body>
</html>
