---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Projekte – stevenschwarz.de">
  <h1>Projekte</h1>

  <section class="project">
    <h2>Luftcheck</h2>
    <p>Tool zur Bestimmung optimaler Lüftungszeit basierend auf relativer Feuchtigkeit.</p>
    <iframe
      src="https://othaldo.github.io/luftcheck/"
      loading="lazy"
      class="app-frame">
    </iframe>
  </section>

  <section class="project">
    <h2>Techback</h2>
    <p>React-App für tägliche Rückenübungen, inkl. Kategorien, Fortschritt und Onboarding.</p>
    <iframe
      src="https://othaldo.github.io/techback/"
      loading="lazy"
      class="app-frame">
    </iframe>
  </section>
</BaseLayout>
